extends layout

block styles
	if env == "development" || env == "production"
		link(rel="stylesheet", href="/css/draw.css")
		link(rel="stylesheet", href="/css/literally.css")
	else if env == "local" 	
		link(rel="stylesheet", href="/css/literallycanvas/colorpicker.css")	
		link(rel="stylesheet", href="/css/literallycanvas/literally.css")
		link(rel="stylesheet/less", href="/css/draw.less")
		script(src="/js/libs/less-1.1.5.min.js")
		

block append header
	#back Back
	#save Save

block overlay
	#info 
		span loading
		#loading

block main
	#main
		#drawingview(height='550px')
			canvas#canvas(height='500px')

block scripts
	if env == "development" || env == "production"
		script(type='text/javascript', src="/js/libs/zub.js")
		script(type='text/javascript', src="/js/scripts/draw.js")
		script(type='text/javascript', src="/js/libs/literallycanvas/literallycanvas.fat.js")
	else if env == "local" 
		script(type='text/javascript', src="/js/libs/jquery-1.7.2.js")
		script(type='text/javascript', src="/js/libs/underscore.js")
		script(type='text/javascript', src="/js/libs/backbone.js")
		script(type='text/javascript', src="/js/scripts/draw.js")
		script(type='text/javascript', src="/js/libs/literallycanvas/literallycanvas.fat.js")
